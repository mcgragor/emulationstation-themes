         <showSnapshotDelay>false</showSnapshotDelay>
      </video>
      <image name="md_marquee">
         <pos>0.055 0.750</pos>
         <origin>0 0</origin>
         <size>0.370 0.160</size>
      </image>

   </view>
   
</theme>
