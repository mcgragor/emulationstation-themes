         <pos>1 1</pos>
      </text>
      <text name="md_description,md_lbl_players,md_players,md_genre,md_releasedate">
         <color>777777</color>
         <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.0175</fontSize>
      </text>
      <text name="md_lbl_players">
         <pos>0.77 0.02</pos>
          <size>0 0.025</size>
		  <fontSize>0.025</fontSize>
		  <color>ff7901</color>
      </text>
      <text name="md_players">
         <pos>0.83 0.02</pos>
         <size>0 0.025</size>
		  <fontSize>0.025</fontSize>
		  <color>ff7901</color>
      </text>
      <datetime name="md_releasedate">
         <pos>0.85 0.0280</pos>
         <size>0 0.025</size>
		  <fontSize>0.025</fontSize>
		  <color>ff7901</color>
      </datetime>
      <text name="md_genre">
         <pos>0.77 0.050</pos>
         <size>0 0.025</size>
		  <fontSize>0.025</fontSize>
		  <color>ff7901</color>
      </text>
      <textlist name="gamelist">
         <pos>0.70 0.150</pos>
         <size>0.29 0.45</size>
         <fontSize>0.025</fontSize>
		 <lineSpacing>1.4</lineSpacing>
		 <selectorImagePath>./_inc/images/selector.png</selectorImagePath>
		 <selectedColor>ff7901</selectedColor>
	     <selectorHeight>.04</selectorHeight>
		 <selectorColor>ff7901</selectorColor>
		 <horizontalMargin>0.015</horizontalMargin>
		 <scrollSound></scrollSound>
      </textlist>
	        <rating name="md_rating">
			<size>0.0 0.03</size>
			<pos>0.82 0.95</pos>
			<color>ff7901</color>
         <filledPath>./_inc/images/star_filled.svg</filledPath>
         <unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
      </rating>
	  	<text name="md_description">
			<fontSize>0.025</fontSize>
			<color>ff7901</color>
			<pos>0.70 0.63</pos>
			<alignment>center</alignment>
			<size>0.29 0.26</size>
		</text>
   </view>
   

   <view name="detailed">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.82 1.875</pos>
         <maxSize>0.15 0.05</maxSize>
      </image>
      <image name="md_image">
         <origin>.53 .54</origin>
         <pos>0.365 0.525</pos>
		 <size>0.28 0.37</size>
         <zIndex>5</zIndex>
         <maxSize>0.3 0.4</maxSize>
      </image>
      <image name="md_marquee">
         <pos>0.03 0.035</pos>
         <origin>0 0</origin>
         <maxSize>0.1 0.1</maxSize>
      </image>
   </view>

   <view name="video">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.82 1.875</pos>
         <maxSize>0.15 0.05</maxSize>
      </image>
      <video name="md_video">
         <origin>0 0</origin>
         <pos>0.217 0.290</pos>
		 <size>0.285 0.390</size>
         <zIndex>5</zIndex>
         <delay>0.01</delay>
         <default>./_inc/videos/static.mp4</default>
