<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

   <view name="system">
			<carousel name="systemcarousel">
				<type>vertical</type>
				<pos>0.000 0.000</pos>
				<size>0.280 1.000</size>
				<color>69696926</color>
				<logoScale>1.8</logoScale>
				<logoSize>0.125 0.160</logoSize>
				<maxLogoCount>5</maxLogoCount>
			</carousel>
	     <image name="system-background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>false</tile>
         <path>./_inc/images/backgroundmenu.png</path>
		 </image>
		 	<text name="systemInfo">
				<pos>-0.0 0.58</pos>
				<size>0.280 0.03</size>
				<backgroundColor>ff790173</backgroundColor>
				<color>000000</color>
				<fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
				<fontSize>0.025</fontSize>
			</text>
		<helpsystem name="help">
         <textColor>ff7901</textColor>
         <iconColor>ff7901</iconColor>
		 <pos>0.390 0.940</pos>
      </helpsystem>
   </view>

   <view name="basic,detailed,video">
      <helpsystem name="help">
         <textColor>ff7901</textColor>
         <iconColor>ff7901</iconColor>
      </helpsystem>
   </view>

   <view name="basic,detailed,video">
      <image name="background">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>false</tile>
         <path>./_inc/images/background.png</path>
      </image>
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.82 0.875</pos>
         <maxSize>0.15 0.05</maxSize>
      </image>
      <textlist name="gamelist">
         <pos>0.1875 0.220</pos>
         <size>0.45 0.575</size>
         <selectorColor>1c1c1c00</selectorColor>
         <selectedColor>e22828</selectedColor>
         <primaryColor>eaeaea</primaryColor>
         <secondaryColor>eaeaea</secondaryColor>
         <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.025</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>center</alignment>
      </textlist>
   </view>

   <view name="basic">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.075</pos>
         <maxSize>0.35 0.15</maxSize>
      </image>
      <textlist name="gamelist">
         <pos>0.46 0.175</pos>
         <size>0.3 0.7</size>
         <alignment>left</alignment>
      </textlist>
   </view>

   <view name="detailed,video">
